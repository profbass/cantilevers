<script>
    $(document).ready(function () {
        var navLinks = $('.navbar-item');
        $.each(navLinks, function(e) {
            var pageLink = $(this).attr('href');
            $(this).on('click', function(e) {
                e.preventDefault();
                //removeActiveClass();
                //$(this).addClass('is-active');
                $('html, body').animate({
                    scrollTop: $(pageLink).offset().top - 64
                }, 200);
            });
        });

